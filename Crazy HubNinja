local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Legends Of Speed OP Script",
    LoadingTitle = "Crazy Hub",
    LoadingSubtitle = "by Ivan",
    Theme = "DarkBlue",

    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,

    ConfigurationSaving = {
        Enabled = false,
        FolderName = nil,
        FileName = "Crazy Hub"
    },

    Discord = {
        Enabled = true,
        Invite = "https://discord.gg/EMQJKsed",
        RememberJoins = true
    },

    KeySystem = false
})

local HomeTab = Window:CreateTab("Homeüè†", 4483362458)
HomeTab:CreateSection("Discord Link")

HomeTab:CreateButton({
    Name = "Copy Discord Link",
    Callback = function()
        setclipboard("https://discord.gg/EMQJKsed")
        Rayfield:Notify({
            Title = "Copied!",
            Content = "The Discord link has been copied to your clipboard.",
            Duration = 3
        })
    end
})

HomeTab:CreateSection("Insta Samurai Pet")

Rayfield:Notify({
    Title = "You Executed The Script",
    Content = "Crazy",
    Duration = 3,
    Image = 4483362458
})

-- üü¢ Toggle Setup
local farming = false

HomeTab:CreateToggle({
    Name = "Auto Insta Neon Pet",
    CurrentValue = false,
    Callback = function(Value)
        farming = Value
        if farming then
            Rayfield:Notify({
                Title = "Auto Pet",
                Content = "Started auto spawning Neon pet.",
                Duration = 3
            })

            task.spawn(function()
                while farming do
                    local pet = game:GetService("ReplicatedStorage").cPetShopFolder:FindFirstChild("Twin Element Birdies")
                    if pet then
                        game:GetService("ReplicatedStorage").cPetShopRemote:InvokeServer(pet)
                    end
                    task.wait(1)
                end
            end)
        else
            Rayfield:Notify({
                Title = "Auto Pet",
                Content = "Stopped auto spawning Neon pet.",
                Duration = 3
            })
        end
    end
})
